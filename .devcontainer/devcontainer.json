{
    "name": "Hugo",
    "image": "mcr.microsoft.com/devcontainers/go",
    "forwardPorts": [
        // default hugo port for local development
        1313
    ],
    "features": {
        "ghcr.io/devcontainers/features/hugo:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.Go",
                "GitHub.copilot",
                "yzhang.markdown-all-in-one",
                "ecmel.vscode-html-css"
            ]
        }
    },
    "remoteUser": "vscode",
    "shutdownAction": "stopContainer"
}