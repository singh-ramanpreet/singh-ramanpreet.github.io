{
    "[html]": {
        "editor.suggest.insertMode": "replace",
        "editor.detectIndentation": false,
        "editor.tabSize": 2,
        "editor.insertSpaces": true
    },
    "[jekyll]": {
        "editor.tabSize": 2
    },
    "html.format.wrapLineLength": 0,
    "emmet.includeLanguages": {
        "jekyll": "html",
        "scss": "css"
    },
    "files.associations": {
        "*.html": "jekyll"
    }
}